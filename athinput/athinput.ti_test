<comment>

problem = Thermal Instability Test
author  = C. G. Kim
journal = Kim et. al 2008 
config  = --with-problem=ti_test  --with-gas=hydro --enable-conduction --enable-cooling --with-integrator=vl --with-order=2p --with-gravity=fft --enable-fft --enable-mpi

<job>

problem_id      = TI         # problem ID: basename of output filenames
maxout          = 5          # Output blocks number from 1 -> maxout
num_domains     = 1          # number of Domains in Mesh

<log>
file_open       = 1

<output1>
out_fmt = hst                # History data dump
dt      = 0.1                # time increment between outputs

<output2>
out_fmt = vtk                # Binary data dump
out	= prim
dt      = 1.0                 # time increment between outputs

<output3>
out_fmt = rst                # Restart data dump
dt      = 10.0               # time increment between outputs

<output4>
out_fmt = starpar_vtk
dt	= 1.0

<output5>
out_fmt = sphst
dt	= 0.1
<time>

cour_no         = 0.3       # The Courant, Friedrichs, & Lewy (CFL) Number
nlim            = -1        # cycle limit
tlim            = 200.0       # time limit

<domain1>

level           = 0          # refinement level this Domain (root=0)
Nx1             = 64         # Number of zones in X-direction
x1min           = -32        # minimum value of X
x1max           = 32         # maximum value of X
bc_ix1          = 4          # inner-I (X) boundary flag
bc_ox1          = 4          # outer-I (X) boundary flag
NGrid_x1	= 2

Nx2             = 64         # Number of zones in Y-direction
x2min           = -32        # minimum value of Y
x2max           = 32         # maximum value of Y
bc_ix2          = 4          # inner-J (Y) boundary flag
bc_ox2          = 4          # outer-J (Y) boundary flag
NGrid_x2	= 2

Nx3             = 32         # Number of zones in X3-direction
x3min           = -16        # minimum value of X3
x3max           = 16         # maximum value of X3
bc_ix3          = 4          # inner-K (Z) boundary flag
bc_ox3          = 4          # outer-K (Z) boundary flag
NGrid_x3	= 2

AutoWithNProc	= 8

<problem>

gamma           = 1.66666667   	# gamma = C_p/C_v
amp             = 0.1       	# drho/rho <= amp
n0              = 4.         	# initial number density
T0              = 1000.      	# initial temperature
kappa           = 1.e5       	# conductivity in unit of c.g.s.
iprob		= 2		# 1: eigen mode/2: random perturbation
